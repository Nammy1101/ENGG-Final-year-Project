<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.urbookproject"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyAppUserData"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signup"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_signup"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HomeScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CaptureBarcode"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_capture_barcode"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ManualSearch"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_manual_search"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SearchResults"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_search_results"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".InsertBook"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_insert_book"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MyAccount"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_my_account"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ChangeMyAccount"
            android:configChanges="orientation|keyboardHidden"
            android:label="Change Account Info"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ChangeMyAccountPassword"
            android:configChanges="orientation|keyboardHidden"
            android:label="Change Password"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WantedList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_wanted_list"
            android:noHistory="true"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".OwnedList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_owned_list"
            android:noHistory="true"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BookMatching"
            android:configChanges="orientation|keyboardHidden"
            android:label="Book Matching"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MatchedUserInformation"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_matched_user_information"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".OwnedListItemChange"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_owned_list_item_change"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WantedListItemChange"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_wanted_list_item_change"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
