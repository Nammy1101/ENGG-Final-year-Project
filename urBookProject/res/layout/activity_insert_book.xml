<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.urbookproject.InsertBook" >

    <ImageView
        android:id="@+id/insert_book_cover"
        android:layout_width="285dp"
        android:layout_height="200dp"
        android:src="@drawable/abc_ab_stacked_solid_dark_holo" />

    <TextView
        android:id="@+id/insert_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/insert_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/insert_book_title"
        android:layout_below="@+id/insert_book_title"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="13sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/insert_book_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/insert_book_author"
        android:layout_below="@+id/insert_book_author"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="13sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select"
        android:layout_alignRight="@+id/imageView1"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/wantedBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/select"
            android:layout_alignLeft="@+id/ownedBook"
            android:onClick="onOptionSelectedClick"
            android:text="Wanted" />

        <RadioButton
            android:id="@+id/ownedBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOptionSelectedClick"
            android:text="Owned" />
    </RadioGroup>

    <Button
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Select" />

</RelativeLayout>